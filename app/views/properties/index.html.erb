<div class="bg-blue-900">
<%= render 'layouts/dashboard/nav' %>
</div>
<div class="h-screen w-full flex overflow-hidden select-none">
    <%= render 'layouts/dashboard/sidenav' %>
    	<main	class="my-1 pt-2 pb-2 px-10 flex-1 bg-gray-200 dark:bg-black rounded-l-lg
		transition duration-500 ease-in-out overflow-y-auto">

      <div>
        <p id="notice"><%= notice %></p>
        <div class="my-4">
          <%= link_to 'New Property', new_property_path, class: "bg-green-700 text-white capitalize p-3 rounded-lg" %>
        </div>
        <br>
        

        <table>
          <thead>
            <tr class="grid grid-cols-8 text-left">
              <th>Name</th>
              <th>Address</th>
              <th>Price</th>
              <th>Rooms</th>
              <th>Bathrooms</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @properties.each do |property| %>
              <tr class="grid grid-cols-8 text-left">
                <td class=""><%= property.name %></td>
                <td class=""><%= property.address %></td>
                <td><%= property.price %></td>
                <td><%= property.rooms %></td>
                <td><%= property.bathrooms %></td>
                <td><%= link_to 'Show', property %></td>
                <td><%= link_to 'Edit', edit_property_path(property) %></td>
                <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
	</main>
</div>